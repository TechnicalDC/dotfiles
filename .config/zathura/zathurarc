set completion-group-fg     "#434852"
set completion-group-bg     "#61afef"
set statusbar-fg            "#abb2bf"
set statusbar-bg            "#111111"
set notification-bg         "#434852"
set notification-fg         "#abb2bf"
set notification-error-bg   "#434852"
set notification-error-fg   "#ef596f"
set notification-warning-bg "#434852"
set notification-warning-fg "#f5a97f"
set inputbar-fg             "#abb2bf"
set inputbar-bg             "#111111"
set recolor-lightcolor      "#111111"
set recolor-darkcolor       "#abb2bf"
set index-fg                "#abb2bf"
set index-bg                "#111111"
set index-active-fg         "#abb2bf"
set index-active-bg         "#434852"
set render-loading-bg       "#111111"
set render-loading-fg       "#abb2bf"
set highlight-color         "#a6da95"
set highlight-fg            "#abb2bf"
set highlight-active-color  "#5b6078"

set font "JetBrainsMonoNL Nerd Font 12"

# settings
set window-height         700
set window-width          500
set adjust-open           width
set page-padding          15
set show-hidden           true
set statusbar-basename    true
set statusbar-home-tilde  true
set page-right-to-left    true
set recolor               true
set recolor-reverse-video false
set selection-clipboard   clipboard
set zoom-center           true
set show-recent           10
set show-directories      true
set incremental-search    true

# remove default key bindings
unmap <C-n>

# key bindings
map K navigate previous
map J navigate next
map D toggle_page_mode
map b toggle_statusbar
map P print
map r reload
map R rotate
map + zoom in
map - zoom out
map d recolor
map <C-q> quit
