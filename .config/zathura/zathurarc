set completion-highlight-bg "#d2dade"
set completion-highlight-fg "#11262d"
set completion-group-fg     "#a3abaf"
set completion-group-bg     "#26233a"
set statusbar-fg            "#191724"
set statusbar-bg            "#9ccfd8"
set notification-bg         "#9ccfd8"
set notification-fg         "#191724"
set notification-error-bg   "#eb6f92"
set notification-error-fg   "#191724"
set notification-warning-bg "#f6c177"
set notification-warning-fg "#191724"
set inputbar-fg             "#191724"
set inputbar-bg             "#9ccfd8"
set recolor-lightcolor      "#191724"
set recolor-darkcolor       "#e0def4"
set index-fg                "#c0c8cc"
set index-bg                "#11262d"
